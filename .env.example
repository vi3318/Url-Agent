# Login page URL (the page with the username/password form)
CRAWLER_LOGIN_URL=https://your-portal.example.com/login

# Credentials
CRAWLER_USERNAME=your_username_here
CRAWLER_PASSWORD=your_password_here

# ============================================================
# SAP Portal credentials (for --login-strategy sap_saml)
# ============================================================
SAP_USERNAME=your_sap_user_id
SAP_PASSWORD=your_sap_password
SAP_LOGIN_URL=https://accounts.sap.com/saml2/idp/sso
